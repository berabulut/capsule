{{ define "redirect.tmpl" }}
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="Kapsule-Redirecting" />
    <link rel="shortcut icon" type="image/x-icon" href="/static/logo.ico" />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:200,300,400,500,600,700&display=swap"
      rel="stylesheet"
    />
    <title>Kapsule - Redirecting</title>

    <style>
      h1 {
        font-family: 'Roboto';
        font-size: 4rem;
      }
      #container {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
      }
    </style>
  </head>
  <body>
    <div id="container">
      <img src="/static/logo.png" alt="Kapsule-Logo" width="500" height="333">
      <h1>
      Redirecting to  {{ .title }}
      </h1>
    <div>
  </body>
</html>
{{ end }}